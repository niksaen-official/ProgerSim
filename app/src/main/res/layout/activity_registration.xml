<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundColor1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Registration">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="@color/textColor1"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/textColor1"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:padding="10dp"
                android:onClick="image1_OnClick"
                android:src="@drawable/avatar1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:padding="10dp"
                android:onClick="image2_OnClick"
                android:src="@drawable/avatar2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:padding="10dp"
                android:onClick="image3_OnClick"
                android:src="@drawable/avatar3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:padding="10dp"
                android:onClick="image4_OnClick"
                android:src="@drawable/avatar4" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/inputPlayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="@color/textColor1"
        android:textColorHint="@color/textColor1"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/changeProfil"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/changeOs"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:layout_marginVertical="10dp"
        android:id="@+id/button"
        android:gravity="center"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:background="@drawable/button1"
        android:textColor="@color/textColor1"
        android:textSize="25sp"
        android:onClick="onClickSave" />
</LinearLayout>