<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/backgroundColor2"
        android:gravity="center_vertical"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/nikName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/textColor1"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="200dp"
        android:layout_toStartOf="@+id/caseImage"
        android:maxWidth="170dp"
        android:minWidth="150dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintEnd_toStartOf="@+id/caseImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:padding="6dp"
            android:background="@color/backgroundColor3"
            android:textColor="@color/textColor1"
            android:textSize="30sp"
            android:id="@+id/pcCase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:padding="6dp"
            android:background="@color/backgroundColor3"
            android:textColor="@color/textColor1"
            android:textSize="30sp"
            android:id="@+id/mobo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:padding="6dp"
            android:background="@color/backgroundColor3"
            android:textColor="@color/textColor1"
            android:textSize="30sp"
            android:id="@+id/cpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:padding="6dp"
            android:background="@color/backgroundColor3"
            android:textColor="@color/textColor1"
            android:textSize="30sp"
            android:id="@+id/cooler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:padding="6dp"
            android:background="@color/backgroundColor3"
            android:textColor="@color/textColor1"
            android:textSize="30sp"
            android:id="@+id/ram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:padding="6dp"
            android:background="@color/backgroundColor3"
            android:textColor="@color/textColor1"
            android:textSize="30sp"
            android:id="@+id/gpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:padding="6dp"
            android:background="@color/backgroundColor3"
            android:textColor="@color/textColor1"
            android:textSize="30sp"
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:padding="6dp"
            android:background="@color/backgroundColor3"
            android:textColor="@color/textColor1"
            android:textSize="30sp"
            android:id="@+id/psu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/caseImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/moboImage"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:id="@+id/gpuImage"
                android:layout_width="80dp"
                android:layout_height="13dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="82dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/gpu2Image"
                android:layout_width="80dp"
                android:layout_height="13dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="112dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/cpuImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/coolerImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ram1Image"
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="78dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ram2Image"
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="84dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ram3Image"
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ram4Image"
                android:layout_width="3dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="96dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/data1Image"
            android:layout_width="65dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/data2Image"
            android:layout_width="65dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/data3Image"
            android:layout_width="65dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/data4Image"
            android:layout_width="65dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="44dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/data5Image"
            android:layout_width="65dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="58dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/data6Image"
            android:layout_width="65dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="71dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/psuImage"
            android:layout_width="87dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="149dp"
            android:gravity="clip_horizontal"
            android:orientation="horizontal" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caseImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/caseImage"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:visibility="invisible"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Установить в:"
            android:textColor="@color/textColor1"
            android:textSize="30sp" />

        <Button
            android:visibility="invisible"
            android:clickable="false"
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button1"
            android:gravity="center"
            android:text="Слот 1"
            android:textColor="@color/textColor1"
            android:textSize="30sp" />

        <Button
            android:visibility="invisible"
            android:clickable="false"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button1"
            android:gravity="center"
            android:text="Слот 2"
            android:textColor="@color/textColor1"
            android:textSize="30sp" />

        <Button
            android:visibility="invisible"
            android:id="@+id/button3"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button1"
            android:gravity="center"
            android:textColor="@color/textColor1"
            android:textSize="30sp" />

        <Button
            android:visibility="invisible"
            android:clickable="false"
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button1"
            android:gravity="center"
            android:textColor="@color/textColor1"
            android:textSize="30sp" />

        <Button
            android:visibility="invisible"
            android:clickable="false"
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"

            android:background="@drawable/button1"
            android:gravity="center"
            android:text="Слот 5"
            android:textColor="@color/textColor1"
            android:textSize="30sp" />

        <Button
            android:visibility="invisible"
            android:clickable="false"
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"

            android:background="@drawable/button1"
            android:gravity="center"
            android:text="Слот 6"
            android:textColor="@color/textColor1"
            android:textSize="30sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>